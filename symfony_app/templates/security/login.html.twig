{% extends 'nologin.html.twig' %}
{% block title %}Login{% endblock %}
{% block body %}
    <div class="card-fliud">
        <div class="card-body pr-0 pb-2">
            <div class="row">
                <div class="col text-right">
                    <a class="card-link" href="register">Register</a>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="card-title text-center">
                <h5>Login</h5>
            </div>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-control-sm mb-2" placeholder="Email" required autofocus>
                <input type="password" name="password" id="inputPassword" class="form-control form-control-sm mb-2" placeholder="Password" required>
                <button class="btn btn-sm btn-outline-success mb-2 w-100" type="submit">Sign in</button>
                <div class="checkbox text-center">
                    <label><input type="checkbox" name="_remember_me"> Remember me</label>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
